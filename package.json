{
  "name": "project-starter-guide",
  "version": "1.0.0",
  "description": "Comprehensive guide for choosing the right architecture and technology stack for any project type",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "generate": "node scripts/generate-template.mjs",
    "generate:api": "node scripts/generate-template.mjs --template=api",
    "generate:saas": "node scripts/generate-template.mjs --template=saas",
    "generate:mobile": "node scripts/generate-template.mjs --template=mobile",
    "generate:about": "node scripts/generate-template.mjs --template=about",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore templates",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore templates --fix",
    "check:links": "markdown-link-check README.md",
    "check:links:all": "find . -name '*.md' -not -path './node_modules/*' -not -path './templates/*' -exec markdown-link-check {} \\;",
    "validate": "npm run lint:md && npm run check:links",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "preview:template": "cd templates/about-me-page && python3 -m http.server 8000",
    "test:qa": "node tests/integration/qa-integration.test.mjs"
  },
  "keywords": [
    "web-development",
    "architecture",
    "technology-stack",
    "starter-guide",
    "documentation",
    "best-practices"
  ],
  "author": "Brett Stark",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brettstark73/project-starter-guide.git"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.47.0",
    "markdown-link-check": "^3.12.1",
    "prettier": "^3.4.2"
  }
}
