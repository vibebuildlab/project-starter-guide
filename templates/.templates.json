{
  "version": "1.0.0",
  "templates": {
    "about-me-page": {
      "name": "About Me Page",
      "description": "Static HTML/CSS portfolio site - no build tools, no dependencies",
      "complexity": 1,
      "stack": ["HTML5", "CSS3", "Vanilla JS"],
      "features": ["responsive", "animations", "seo-ready"],
      "customizations": {
        "colorScheme": {
          "type": "select",
          "label": "Color scheme",
          "options": ["blue", "green", "purple", "orange"],
          "default": "blue"
        },
        "includeSocialLinks": {
          "type": "boolean",
          "label": "Include social media links",
          "default": true
        }
      },
      "envVars": []
    },
    "api-service": {
      "name": "API Service",
      "description": "Production-ready REST API with Express 5, TypeScript, PostgreSQL, and Prisma",
      "complexity": 3,
      "stack": ["Express 5", "TypeScript", "PostgreSQL", "Prisma", "Vitest"],
      "features": [
        "jwt-auth",
        "rate-limiting",
        "ssrf-protection",
        "prisma-orm"
      ],
      "customizations": {
        "database": {
          "type": "select",
          "label": "Database provider",
          "options": ["postgresql", "sqlite"],
          "default": "postgresql"
        },
        "includeAuth": {
          "type": "boolean",
          "label": "Include JWT authentication",
          "default": true
        },
        "includeRateLimiting": {
          "type": "boolean",
          "label": "Include rate limiting",
          "default": true
        }
      },
      "envVars": [
        {
          "key": "DATABASE_URL",
          "required": true,
          "example": "postgresql://user:password@localhost:5432/mydb"
        },
        {
          "key": "JWT_SECRET",
          "required": true,
          "example": "your-super-secret-jwt-key-change-in-production"
        },
        { "key": "PORT", "required": false, "default": "3000" }
      ]
    },
    "mobile-app": {
      "name": "Mobile App",
      "description": "Cross-platform mobile app with React Native, Expo 54, and TypeScript",
      "complexity": 2,
      "stack": ["React Native 0.81", "Expo 54", "TypeScript", "Jest"],
      "features": ["file-routing", "platform-specific", "expo-go"],
      "customizations": {
        "navigation": {
          "type": "select",
          "label": "Navigation style",
          "options": ["tabs", "stack", "drawer"],
          "default": "tabs"
        },
        "includeAnalytics": {
          "type": "boolean",
          "label": "Include analytics setup",
          "default": false
        }
      },
      "envVars": [
        {
          "key": "EXPO_PUBLIC_API_URL",
          "required": false,
          "example": "https://api.example.com"
        }
      ]
    },
    "saas-level-1": {
      "name": "SaaS Level 1",
      "description": "Full-stack SaaS starter with Next.js 16, NextAuth, Stripe, and Prisma",
      "complexity": 3,
      "stack": [
        "Next.js 16",
        "TypeScript",
        "PostgreSQL",
        "Prisma",
        "NextAuth",
        "Stripe",
        "Tailwind CSS",
        "Vitest"
      ],
      "features": ["auth", "payments", "database", "responsive-ui"],
      "customizations": {
        "database": {
          "type": "select",
          "label": "Database provider",
          "options": ["postgresql", "sqlite"],
          "default": "postgresql"
        },
        "authProviders": {
          "type": "multiselect",
          "label": "Authentication providers",
          "options": ["credentials", "github", "google", "discord"],
          "default": ["credentials"]
        },
        "includeStripe": {
          "type": "boolean",
          "label": "Include Stripe payments",
          "default": true
        },
        "includeEmail": {
          "type": "boolean",
          "label": "Include email (Nodemailer)",
          "default": false
        }
      },
      "envVars": [
        {
          "key": "DATABASE_URL",
          "required": false,
          "example": "postgresql://user:password@localhost:5432/mydb"
        },
        {
          "key": "NEXTAUTH_SECRET",
          "required": true,
          "example": "your-nextauth-secret-32-chars-min"
        },
        {
          "key": "NEXTAUTH_URL",
          "required": true,
          "example": "http://localhost:3000"
        },
        {
          "key": "GITHUB_ID",
          "required": false,
          "example": "your-github-oauth-app-id"
        },
        {
          "key": "GITHUB_SECRET",
          "required": false,
          "example": "your-github-oauth-secret"
        },
        {
          "key": "GOOGLE_ID",
          "required": false,
          "example": "your-google-oauth-client-id"
        },
        {
          "key": "GOOGLE_SECRET",
          "required": false,
          "example": "your-google-oauth-secret"
        },
        {
          "key": "STRIPE_SECRET_KEY",
          "required": false,
          "example": "sk_test_..."
        },
        {
          "key": "STRIPE_PUBLISHABLE_KEY",
          "required": false,
          "example": "pk_test_..."
        },
        {
          "key": "STRIPE_WEBHOOK_SECRET",
          "required": false,
          "example": "whsec_..."
        }
      ]
    },
    "monetization": {
      "name": "SaaS Monetization System",
      "description": "Complete revenue infrastructure with Stripe, licensing, legal, and marketing templates",
      "complexity": 0,
      "stack": ["Node.js", "Stripe", "HMAC-SHA256"],
      "features": [
        "license-validation",
        "stripe-integration",
        "legal-compliance",
        "marketing-templates"
      ],
      "customizations": {
        "projectName": {
          "type": "text",
          "label": "Project name",
          "required": true
        },
        "domain": {
          "type": "text",
          "label": "Domain",
          "default": "yoursite.com"
        },
        "companyName": {
          "type": "text",
          "label": "Company name",
          "required": true
        }
      },
      "envVars": [
        {
          "key": "STRIPE_SECRET_KEY",
          "required": true,
          "example": "sk_live_..."
        },
        {
          "key": "LICENSE_SIGNING_SECRET",
          "required": true,
          "example": "your-secure-random-secret"
        },
        {
          "key": "STRIPE_WEBHOOK_SECRET",
          "required": false,
          "example": "whsec_..."
        }
      ]
    }
  },
  "defaults": {
    "author": "Your Name",
    "license": "MIT"
  }
}
